<schemalist>
  <schema id="org.gnome.openpie.touchmenu"
   path="/org/gnome/openpie/touchmenu/"
   gettext-domain="openpie">

    <key name="schematize" type="b">
      <default l10n="messages">true</default>
      <summary>Simplifies the visual feedback.</summary>
      <description>
        If set to true, the visual feedback of the menu will be schematized.
      </description>
    </key>

  </schema>
</schemalist>
