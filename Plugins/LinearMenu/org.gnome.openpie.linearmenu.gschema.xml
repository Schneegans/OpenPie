<schemalist>
  <schema id="org.gnome.openpie.tracemenu"
   path="/org/gnome/openpie/tracemenu/"
   gettext-domain="openpie">

    <key name="theme" type="s">
      <default l10n="messages">"Unity"</default>
      <summary>The current theme.</summary>
      <description>
        The name of the current theme of the TraceMenu plugin for OpenPie.
      </description>
    </key>

    <key name="schematize" type="b">
      <default l10n="messages">true</default>
      <summary>Simplifies the visual feedback.</summary>
      <description>
        If set to true, the visual feedback of the menu will be schematized.
      </description>
    </key>

    <key name="hidemouse" type="b">
      <default l10n="messages">true</default>
      <summary>Hides the mouse.</summary>
      <description>
        Hides the mouse.
      </description>
    </key>

  </schema>
</schemalist>
